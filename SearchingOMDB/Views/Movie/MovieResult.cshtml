@model SearchingOMDB.Models.MovieDetail

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="@Model.Poster" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Plot</p>
        <p class="card-text"><small class="text-muted">@Model.Released</small></p>
      </div>
    </div>
  </div>
</div>