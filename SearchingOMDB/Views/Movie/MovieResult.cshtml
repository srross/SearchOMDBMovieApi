@model SearchingOMDB.Models.MovieDetail

<div class="row">
    <div class="card" style="width: 18rem;">
        <img src="@Model.Poster" class="img-thumbnail" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Plot</p>
            <p class="card-text"><small class="text-muted">@Model.Released</small></p>
        </div>
    </div>
</div>