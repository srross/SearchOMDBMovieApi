@model SearchMovie

<div class="row">
    <div class="col-6">
        <form asp-action="SearchMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieTitle" class="control-label"></label>
                <input asp-for="MovieTitle" class="form-control" />
                 <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
            <button class="btn btn-primary mt-2" type="submit" value="Create">Submit</button>
        </form>
    </div>
    <div class="col-6"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}